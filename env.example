# Canvas Section Manager - Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/canvas-section-manager

# Canvas API Configuration (Users will input these through the UI)
# CANVAS_BASE_URL=https://your-institution.instructure.com
# CANVAS_API_TOKEN=your_canvas_api_token_here

# Security
SESSION_SECRET=your_session_secret_here_change_in_production

# ACU Specific Settings
INSTITUTION_NAME=Australian Catholic University
PRIMARY_COLOR=#663399

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 